# Configuration Infomaniak Public Cloud
# Copier ce fichier vers .env et remplir les valeurs

# API Infomaniak
INFOMANIAK_API_TOKEN=your_api_token_here
INFOMANIAK_PROJECT_ID=your_project_id_here

# Configuration cluster
CLUSTER_NAME=lab-cluster-k8s
CLUSTER_REGION=ch-dc3-a

# Configuration alertes
ALERT_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Limites co√ªts (en CHF)
MAX_COST_PER_SESSION=5.00
MAX_COST_PER_WEEK=25.00
MAX_COST_PER_MONTH=100.00

# Auto-shutdown
AUTO_SHUTDOWN_AFTER_HOURS=5
FORCE_SHUTDOWN_AFTER_HOURS=6

# Stockage S3
S3_BUCKET_NAME=lab-artifacts
S3_ENDPOINT=https://s3.pub1.infomaniak.cloud

# Configuration profiles
PROFILE_MINIMAL_NODES=1
PROFILE_STANDARD_NODES=2
PROFILE_MEMORY_NODES=3
PROFILE_AI_GPU_NODES=1

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_S3_PATH=s3://lab-artifacts/backups/

# Monitoring
PROMETHEUS_RETENTION=2d
GRAFANA_ADMIN_PASSWORD=changeme
ENABLE_LOKI=false
